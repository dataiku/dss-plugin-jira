{
    "meta" : {
        "label": "Jira OpsGenie",
        "description": "",
        "icon": "icon-ticket"
    },
    "readable": true,
    "writable": false,

    "params": [
        {
            "name": "access_type",
            "label": "Access type. Reviewer: hidden menu to keep for future extension",
            "visibilityCondition": "false",
            "type": "SELECT",
            "defaultValue": "token_access",
            "selectChoices": [
                {
                    "value": "token_access",
                    "label": "Token"
                }
            ]
        },
        {
            "name": "token_access",
            "label": "Token API access",
            "type": "PRESET",
            "parameterSetId": "opsgenie-auth",
            "visibilityCondition": "model.access_type == 'token_access'"
        },
        {
            "name": "edge_name",
            "label": "Item type",
            "type": "SELECT",
            "defaultValue": "alerts",
            "selectChoices": [
                {
                    "value": "alerts",
                    "label": "Alerts"
                },
                {
                    "value": "incidents",
                    "label": "Incidents"
                }
            ]
        },
        {
            "name": "item_value",
            "label": "Issue ID or key",
            "type": "STRING",
            "defaultValue": "",
            "mandatory": true,
            "visibilityCondition": "model.edge_name == 'issue'"
        },
        {
            "name": "item_value",
            "label": "Dashboard ID",
            "type": "STRING",
            "defaultValue": "",
            "visibilityCondition": "model.edge_name == 'dashboard'"
        },
        {
            "name": "item_value",
            "label": "Organization ID",
            "type": "STRING",
            "defaultValue": "",
            "visibilityCondition": "model.edge_name == 'organization'"
        },
        {
            "name": "item_value",
            "label": "Organization ID",
            "type": "STRING",
            "defaultValue": "",
            "visibilityCondition": "model.edge_name == 'organization/user'"
        },
        {
            "name": "item_value",
            "label": "Service Desk ID",
            "type": "STRING",
            "defaultValue": null,
            "visibilityCondition": "model.edge_name == 'servicedesk/organization'"
        },
        {
            "name": "item_value",
            "label": "Issue Key or ID",
            "type": "STRING",
            "defaultValue": null,
            "visibilityCondition": "model.edge_name == 'request'"
        },
        {
            "name": "item_value",
            "label": "Service desk ID",
            "type": "STRING",
            "defaultValue": null,
            "visibilityCondition": "model.edge_name == 'servicedesk'"
        },
        {
            "name": "item_value",
            "label": "Service desk ID",
            "type": "STRING",
            "defaultValue": null,
            "mandatory": true,
            "visibilityCondition": "model.edge_name == 'servicedesk/customer' || model.edge_name == 'servicedesk/queue' || model.edge_name == 'servicedesk/queue/issue'"
        },
        {
            "name": "queueId",
            "label": "Queue ID",
            "type": "STRING",
            "defaultValue": null,
            "mandatory": true,
            "visibilityCondition": "model.edge_name == 'servicedesk/queue/issue'"
        },
        {
            "name": "item_value",
            "label": "Query",
            "description": "status:open",
            "type": "STRING",
            "defaultValue": null,
            "visibilityCondition": "model.edge_name == 'alerts' || model.edge_name == 'incidents'"
        }
    ]
}
